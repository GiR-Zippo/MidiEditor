<?xml version="1.0"?>
<Installer>
    <Name>ProMidEdit</Name>
    <Version>3.8.1</Version>
    <Title>ProMidEdit Setup</Title>
    <Publisher>jingkaimori</Publisher>
    <ProductUrl>https://github.com/jingkaimori/midieditor</ProductUrl>
    <InstallerWindowIcon>package.png</InstallerWindowIcon>
    <Logo>midieditor.png</Logo>
    <RunProgram>@TargetDir@/ProMidEdit.exe</RunProgram>
    <RunProgramArguments>
    </RunProgramArguments>
    <RunProgramDescription>run midieditor</RunProgramDescription>
    <StartMenuDir>ProMidEdit</StartMenuDir>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>

    <!-- Reduce installer size by disabling unnecessary features -->
    <CreateLocalRepository>false</CreateLocalRepository>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    <RemoteRepositories></RemoteRepositories>

    <!-- Disable maintenance tool - use Windows built-in uninstall instead -->
    <MaintenanceToolName></MaintenanceToolName>

    <TargetDir>@HomeDir@/ProMidEdit</TargetDir>
    <AdminTargetDir>@RootDir@/ProMidEdit</AdminTargetDir>
</Installer>